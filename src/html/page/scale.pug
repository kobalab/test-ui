- var width = 800
doctype html
html(lang="ja")
  head
    include ../inc/meta
    title scale
    include ../inc/style
    include ../inc/script
    style.
      @media screen and (max-height: 450px) {
        h1 { display: none; }
        body {
          margin: 0;
          height: 100vh;
        }
        .space {
          height: 100px;
          background: #ccc;
        }
      }
      body {
        margin: auto;
        width: 800px;
      }
      .main {
        width: 800px;
        height: 450px;
        background: #999;
      }
      .main > div {
        box-sizing: border-box;
        width: 100%;
        height: 100%;
        border: solid 5px black;
      }
    script.
        const { scale } = Majiang.UI.Util;
        $(function(){
            $(window).on('resize', ()=>scale($('.main'), $('.space')));
        });
  body.scale
    h1 scale
    div.space
    div.main
      div
