- var page = 'scale'
doctype html
html(lang="ja")
  head
    include ../inc/meta
    title scale
    include ../inc/style
    include ../inc/script
    style.
      @media screen and (max-height: 450px) {
        h1 { display: none; }
        body {
          margin: 0;
          height: 100vh;
        }
        .space {
          height: 100px;
          background: #ccc;
        }
      }
      .main {
        width: 800px;
        height: 450px;
        background: #999;
      }
      .main > div {
        box-sizing: border-box;
        width: 100%;
        height: 100%;
        border: solid 5px black;
      }
  body.scale
    h1 scale
    div.space
    div.main
      div
