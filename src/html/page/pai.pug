- var page = 'pai'
doctype html
html(lang="ja")
  head
    include ../inc/meta
    title scale
    include ../inc/style
    include ../inc/script
    style.
      img {
        vertical-align: bottom;
        margin-left: 5px;
      }
    script.
        $(function(){
            const pai = Majiang.UI.pai('#loaddata');

            function submit() {
                try {
                    let p = $('form [name=pai]').val();
                    $('form span').empty().append(pai(p));
                }
                catch(e) {
                    $('form span').empty().append(pai('_'));
                }
                return false;
            }

            $('form').on('submit', submit);
        });
  body.pai
    h1 pai
    include ../inc/loaddata
    form
      input(name="pai" size="2")
      span
        img(class="pai" src="img/pai.gif")
